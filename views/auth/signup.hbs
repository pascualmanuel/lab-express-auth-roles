        <form action="/registro" method="POST">
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="username">Nombbre de Usuario</label>
      <input type="text" class="form-control" id="username" name="username" placeholder="Nombre de Usuario">
    </div>
    <div class="form-group col-md-6">
      <label for="email">Email</label>
      <input type="text" class="form-control" id="email" name="email" placeholder="email">
    </div>
  </div>
      <div class="form-row">
            <div class="form-group col-md-6">
      <label for="password">Contraseña</label>
      <input type="password" class="form-control" id="password" name="userPwd" placeholder="Contraseña">
    </div>
    <div class="form-group col-md-6">
      <label for="-">Confirmar Contraseña</label>
      <input type="password" class="form-control" id="-" placeholder="Confirmar contraseña">
    </div>
  </div>
      <div class="form-row">
